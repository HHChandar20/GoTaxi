@{
    ViewData["Title"] = "Home Page";
}

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/login-register.css">

</head>
<body>

    <div class="container mt-4">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h2 class="text-center">Welcome to GoTaxi!</h2>

                <h3 class="text-center pt-5 mb-5">Login</h3>

                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger" role="alert">
                        @TempData["ErrorMessage"]
                    </div>
                }

                <div class="mb-3 text-center">
                    <button type="button" class="btn registration-option selected" onclick="FormManager.selectOption('client')">Client</button>
                    <button type="button" class="btn registration-option" onclick="FormManager.selectOption('taxi')">Driver</button>
                </div>

                <form asp-action="LoginDriver" method="post" id="taxi-form" class="hidden">
                    <div class="form-group">
                        <label for="taxi-plateNumber">Plate Number:</label>
                        <input type="text" class="form-control" id="taxi-plateNumber" name="plateNumber" autocomplete="on" required />
                    </div>
                    <div class="form-group">
                        <label for="taxi-password">Password:</label>
                        <input type="password" class="form-control" id="taxi-password" name="password" required />
                    </div>
                    <div class="form-group text-center pt-1 mt-4">
                        <button type="submit" class="btn btn-primary" onsubmit="FormManager.clearFormInputs()">Login</button>
                    </div>

                    <p class="text-center mt-5">
                        Don't have an account? <a asp-controller="Home" asp-action="Register">Register now</a>
                    </p>

                </form>

                <form asp-action="LoginClient" method="post" id="client-form">
                    <div class="form-group">
                        <label for="client-phoneNumber">Phone Number:</label>
                        <input type="text" class="form-control" id="client-phoneNumber" name="phoneNumber" autocomplete="on" required />
                    </div>
                    <div class="form-group">
                        <label for="client-password">Password:</label>
                        <input type="password" class="form-control" id="client-password" name="password" required />
                    </div>
                    <div class="form-group text-center pt-1 mt-4">
                        <button type="submit" class="btn btn-primary" onsubmit="FormManager.clearFormInputs()">Login</button>
                    </div>

                    <p class="text-center mt-5">
                        Don't have an account?
                        <a asp-controller="Home" asp-action="Register">Register now</a>
                    </p>

                </form>

            </div>

        </div>
    </div>

    <script type="text/javascript" src="~/js/form.js"></script>

</body>